<div class="panel panel-default">
  <div class="panel-heading">
    <h3>Heros</h3>
  </div>
<div class="panel-body">
  <div class="row">
    <% @heros.each do |hero| %>
            <div class="col-xs-6 col-md-4">
                <%= link_to image_tag(hero.name+".jpg",:class=>"thumbnail"),hero%>
              <h4><%= hero.name %></h4>
              <p>
                <%= hero.faction %> |
                <%= hero.melrange %> |
                <%= hero.oftype %> |
              </p>
            </div>
    <% end %>
    </div>
</div>
  </div>
<br>
